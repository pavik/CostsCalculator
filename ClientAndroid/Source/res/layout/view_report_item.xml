<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/col_white"
    android:paddingLeft="2dp"
    android:paddingRight="2dp" >

    <TextView
        android:id="@id/tv_date_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/col_yellow"
        android:textStyle="bold" />

    <TextView
        android:id="@id/tv_price_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/col_price_val" />

    <View
        android:id="@+id/v_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/tv_price_val"
        android:layout_margin="2dp"
        android:background="@color/col_light_gray" />

</RelativeLayout>